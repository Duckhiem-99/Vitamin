@model TTN_Vitamin.Models.SanPham
@{
    ViewBag.Title = Html.DisplayFor(model => model.tenSanPham);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section style="margin-top:15px;">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- Product main img -->
            <div class="col-md-3">
                @{
                    string ImagePath = "~/AnhSP/VTM/" + Model.anhSanPham;
                }
                <img src="@Url.Content(ImagePath)" alt="">
            </div>
            <!-- Product details -->
            <div class="col-md-5"  style="margin-left:350px">
                <div class="product-details">
                    <h2 class="product-name">@Html.DisplayFor(model => model.tenSanPham)</h2>
                    <div>
                        <dl class="dl-horizontal" style="float:inherit">
                            <dt>
                                @Html.DisplayNameFor(model => model.maSP)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.maSP)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.thuongHieu)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.thuongHieu)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.giaSanPham)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.giaSanPham)
                            </dd>
                        </dl>
                    </div>
                    <div style="margin-left:50px;">
                        <span class="product-available">Còn hàng</span>
                    </div>
                    <br />
                    <br />
                    <div class="add-to-cart">
                        <div class="qty-label">
                            Số lượng
                            <div class="input-number">
                                <input type="number" value="1" min="1" max="100">
                            </div>
                        </div>
                        <a class="add-to-cart-btn" href="@Url.Action("AddItem","GioHang",new { masp = Model.maSP })"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ</a>
                    </div>

                </div>
            </div>
            <!-- /Product details -->
            <div class="row">
                <div class="col-xs-6">
                    <h2 style="background-color:wheat">Mô tả chi tiết</h2>
                    <p>@Html.DisplayFor(model => model.moTaSanPham)</p>
                </div>
                <div class="col-xs-6">
                </div>
            </div>
            <!--Bình luận-->
            <!--/bình luận-->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</section>

