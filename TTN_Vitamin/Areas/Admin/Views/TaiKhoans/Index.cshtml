@model IEnumerable<TTN_Vitamin.Models.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
</head>
<body>
    <div class="table table-striped table-bordered table-hover" id="dataTables-example">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12" style="align-content:center;font-size:40px;text-align:center">
                    Quản lý tài khoản
                </div>
            </div>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.matKhau)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.hoTenDT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.quyen)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                   <input type="password" value="@item.matKhau" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hoTenDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quyen)
                </td>
            </tr>
                }

            </table>
            </div>
</div>
</body>
</html>