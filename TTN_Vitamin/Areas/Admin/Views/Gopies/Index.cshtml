                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NguoiDung.hoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.noiDung)
                        </td>
                        <td>
                            @Html.ActionLink("Cập nhật", "Edit", new { id = item.maGopY.Trim() }) |
