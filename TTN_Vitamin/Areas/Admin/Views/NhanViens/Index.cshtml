@model IEnumerable<TTN_Vitamin.Models.NhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
</head>
<body>
    <div class="table table-striped table-bordered table-hover" id="dataTables-example">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12" style="align-content:center;font-size:40px;text-align:center">
                    Quản lý nhân viên
                </div>
            </div>
            <th>
                <p style="float:right">
                    @Html.ActionLink("Thêm", "Create")
                </p>
            </th>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.hoTen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.sDT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.emailNV)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.diaChi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.matKhau)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.hoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sDT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.emailNV)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.diaChi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.matKhau)
                        </td>
                        <td>
                            @Html.ActionLink("Cập nhật", "Edit", new { id = item.maNV.Trim() }) |
                            @Html.ActionLink("Thông tin nhân viên", "Details", new { id = item.maNV.Trim() }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.maNV.Trim() })
                        </td>
                    </tr>
                }

            </table>
            </div>
        </div>
    </body>
</html>
